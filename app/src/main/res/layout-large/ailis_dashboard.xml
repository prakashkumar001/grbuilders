<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".3"
        android:background="#4BBDBD"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@android:color/white"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/logo"

            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >



            <LinearLayout
                android:id="@+id/viewPlans"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:paddingLeft="3dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/gallery_icon"
                    />

                <TextView
                    android:id="@+id/elevation_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="22dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:text="ELEVATION / VIEW"
                    />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:layout_gravity="center"
                    android:src="@drawable/right_white_icon"

                    />

            </LinearLayout>

                <LinearLayout
                    android:id="@+id/floorPlans"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:paddingLeft="3dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/floor_icon"
                        />

                    <TextView
                        android:id="@+id/floor_text"

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="22dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:text="FLOOR PLAN"
                        />


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:layout_gravity="center"
                        android:src="@drawable/right_white_icon"

                        />

                </LinearLayout>


            <LinearLayout
                android:id="@+id/specification"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="3dp"

                    android:src="@drawable/gallery_icon"
                    />

                <TextView
                    android:id="@+id/specification_text"

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="22dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:text="SPECIFICATION /AMENITIES"
                    />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"

                    android:layout_gravity="center|"
                    android:src="@drawable/right_white_icon"

                    />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/location_icon"
                    />

                <TextView
                    android:id="@+id/location_text"

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="22dp"
                    android:paddingLeft="3dp"

                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:text="LOCATION / HIGHLIGHTS"
                    />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"

                    android:layout_gravity="center"
                    android:src="@drawable/right_white_icon"

                    />

            </LinearLayout>

